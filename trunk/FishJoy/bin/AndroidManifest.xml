            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name=".Helper" android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name=".GameMode" android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name=".About" android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
    </application>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
